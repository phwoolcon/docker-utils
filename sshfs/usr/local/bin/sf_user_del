#!/usr/bin/env bash

USERNAME=$1

umount "/sshfs/${USERNAME}/0-share"
umount "/sshfs/${USERNAME}/1-dept"
umount "/sshfs/${USERNAME}/2-me"

rm -d "/sshfs/${USERNAME}/0-share" "/sshfs/${USERNAME}/1-dept" "/sshfs/${USERNAME}/2-me"
rm -d "/sshfs/${USERNAME}"
deluser "${USERNAME}"

cp -a /etc/group /data/etc/group
cp -a /etc/passwd /data/etc/passwd
cp -a /etc/shadow /data/etc/shadow

echo Deleted user \"${USERNAME}\" >> /data/log/sshfs.log

sf_remove_user_fstab "${USERNAME}"
sf_gen_fstab_and_mount
